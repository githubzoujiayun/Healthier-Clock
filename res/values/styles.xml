<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="android:Theme"></style>

    <style name="Theme.InputMethod">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
        <!-- <item name="android:windowBackground">@drawable/transparent_background</item> -->
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:colorForeground">#fff</item> -->
    </style>

    <style name="Theme.Toast">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--
         A theme that has a wallpaper background.  Here we explicitly specify
         that this theme is to inherit from the system's wallpaper theme,
         which sets up various attributes correctly.
    -->
    <style name="Theme.Wallpaper" parent="android:style/Theme.Wallpaper">
        <item name="android:colorForeground">#fff</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 窗口背景 -->
        <item name="android:background">@android:color/transparent</item> <!-- Layout背景 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
    </style>

    <!-- Toggle Switch Style -->
    <style name="toggle_switch_style">
        <item name="thumb">@drawable/switch_thumb</item>
        <item name="track">@drawable/switch_track_off</item>
        <item name="trackOff">@drawable/switch_track_off</item>
        <item name="trackOn">@drawable/switch_track_on</item>
        <item name="switchTextAppearanceAttrib">@style/toggle_switch_text_appearance</item>
        <item name="textOn">@string/open</item>
        <item name="textOff">@string/close</item>
        <item name="trackTextPadding">8dp</item>
    </style>

    <style name="toggle_switch_text_appearance">
        <item name="textColor">#FF8B8B8B</item>
        <item name="textColorOff">#FF8B8B8B</item>
        <item name="textColorOn">#FFFFFFFF</item>
        <item name="textSize">16sp</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="clock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- This theme is similar to the Theme.Dialog.Alert but does not rely on a non-public resource. -->
    <style name="alarm_alert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 标题栏样式 -->
    <style name="title_bar_title_text" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/title_bar_button_text</item>
        <item name="android:shadowColor">@color/title_bar_button_text_shadow</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="title_bar_left_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/title_bar_button_text</item>
        <item name="android:shadowColor">@color/title_bar_button_text_shadow</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/title_bar_left_button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="title_bar_right_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/title_bar_button_text</item>
        <item name="android:shadowColor">@color/title_bar_button_text_shadow</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/title_bar_right_button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 天气小块样式 -->
    <style name="weather_logo" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF333333</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="weather_info" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF333333</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="alarm_action_button" parent="@android:style/Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="list_block_item_name" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_block_item_value" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FFFF0000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_block_item_tip_text" parent="@android:style/Widget.TextView">
        <item name="android:gravity">right</item>
        <item name="android:textColor">#FF999999</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_block_item_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FFFF0000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="list_block_checked_text_view">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">18sp</item>
        <item name="android:checkMark">@drawable/checkbox_selector</item>
    </style>

    <style name="edit_text" parent="@android:style/Widget.EditText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FFFF0000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="list_block_radio_button_title">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="list_block_radio_button_hint">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="list_block_divider" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FF999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#FFDDDDDD</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:shadowColor">#FFFFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="hour_tip" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF333333</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">6dip</item>
    </style>

    <style name="shadow" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF333333</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="solution_text" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="solution_action_button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/action_button_divider</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingTop">4dip</item>
    </style>

    <style name="channel_button" parent="@android:style/Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="help_page_title" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="help_page_text" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_action_button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/dialog_action_button_background_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/dialog_action_button_color_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dialog_title" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:shadowColor">#FFFFFFFF</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="radio_group_default">
        <item name="android:padding">2dip</item>
        <item name="android:background">#FFFFFFFF</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="checkbox_default">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@drawable/checkbox_color_selector_default</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:background">#FFFFFFFF</item>
        <item name="android:drawableLeft">@drawable/checkbox_selector_default</item>
        <item name="android:drawablePadding">5dip</item>
    </style>

    <style name="button_radio">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/button_radio_color_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:background">@drawable/button_radio_selector</item>
    </style>

    <style name="start_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/start_ratingbar_full</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

</resources>