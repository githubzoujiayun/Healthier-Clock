<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="clock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--
         This theme is similar to the Theme.Dialog.Alert but does not rely on a
         non-public resource.
    -->
    <style name="alarm_alert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 标题栏样式 -->
    <style name="title_bar_title_text" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/title_bar_button_text</item>
        <item name="android:shadowColor">@color/title_bar_button_text_shadow</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="title_bar_left_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/title_bar_button_text</item>
        <item name="android:shadowColor">@color/title_bar_button_text_shadow</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/title_bar_left_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 天气小块样式 -->
    <style name="weather_logo" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF333333</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="weather_info" parent="@android:style/Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF333333</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="alarm_action_button" parent="@android:style/Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>