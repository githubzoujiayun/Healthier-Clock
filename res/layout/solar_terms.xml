<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CoustomTextView="http://schemas.android.com/apk/res-auto"
    xmlns:TextViewVertical="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/top_filling"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:src="@drawable/title_bar"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/picture_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0" >

        <ImageView
            android:id="@+id/picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/solar_terms_01" />

        <TextView
            style="@style/shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shadow"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="12dip"
            android:drawableRight="@drawable/icon_refresh"
            android:text="更新于2012/7/5 " />

        <com.jkydjk.healthier.clock.widget.TextViewVertical
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            TextViewVertical:font="FZDBSJW_0.TTF"
            TextViewVertical:lineWidth="5dip"
            android:shadowColor="#FF333333"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1"
            android:text="大暑\n这\n是一段测试文字"
            android:textColor="#FFFF0000"
            android:textSize="42sp" />

        <com.jkydjk.healthier.clock.widget.CustomTextView
            android:id="@+id/solar_terms_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            CoustomTextView:font="FZDBSJW_0.TTF"
            android:shadowColor="#FF333333"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1"
            android:text="辰时"
            android:textColor="#FFFFFFFF"
            android:textSize="42sp" />

        <ImageView
            android:id="@+id/shadow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/picture"
            android:src="@drawable/picture_bottom_inner_shadow" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:divider="#CCCCCC"
        android:dividerHeight="1.0px"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:scrollingCache="false" />

</LinearLayout>