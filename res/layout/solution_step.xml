<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <TextView
        android:id="@+id/step_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dip"
        android:background="#FFDDDDDD"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="2dip"
        android:textColor="#FF666666"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/step_content"
        style="@style/solution_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/step_no"
        android:paddingLeft="5dip" />

    <RelativeLayout
        android:id="@+id/acupoint_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step_content"
        android:background="#FFFFFFFF"
        android:paddingBottom="10dip"
        android:paddingLeft="28dip"
        android:paddingRight="12dip"
        android:paddingTop="10dip"
        android:visibility="gone" >

        <TextView
            android:id="@+id/acupoint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:singleLine="true"
            android:text="@string/view_acupoint"
            android:textColor="#FFFF3300"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@+id/acupoint_layout"
        android:background="@drawable/setting_line" />

</RelativeLayout>